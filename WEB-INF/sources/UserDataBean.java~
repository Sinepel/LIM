//package users;

import java.sql.*;
import java.util.*;
import java.net.*;

import javax.naming.InitialContext;
import javax.naming.NamingException;
import javax.sql.DataSource;

public class UserDataBean{
	private Connection con;
	private PreparedStatement getUser;
	
	public UserDataBean() throws Exception{
		Class.forName("org.postgresql.Driver");
		con = DriverManager.getConnection("jdbc:postgresql://localhost/lim","postgres","postgres");
		getUser = con.prepareStatement("SELECT pseudo, mdp, espece, bons, role FROM utilisateur WHERE pseudo = ?");
	}
	
	public User getUtilisateur(String pseudo) throws SQLException{
		User monUtilisateur = new User();
		
		getUser.setString(1, pseudo);
		ResultSet rs = getUser.executeQuery(); 
		
		while(rs.next()){
			monUtilisateur.setPseudo(rs.getString(1));
			monUtilisateur.setRole(rs.getString(2));
			monUtilisateur.setEspece(rs.getInt(3));
			monUtilisateur.setBons(rs.getInt(4));
		}
		return monUtilisateur;
	}
	
	protected void finalize() {
	// attempt to close database connection
	try {
		getUser.close();
		con.close();
		}

	// process SQLException on close operation
		catch (SQLException sqlException) {
			sqlException.printStackTrace();
		}	
	}
	

	
	
}


